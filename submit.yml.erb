---
batch_connect:
  template: "vnc"
  conn_file: "connection.yml"
  conn_params:
    - host
    - port
    - websocket
  websockify_cmd: "/usr/bin/websockify"
  vnc_args: nil
  name: ""
  geometry: ""
  dpi: ""
  fonts: ""
  idle: ""
  extra_args: ""
  vnc_clean: "..."
# script:
#   queue_name : <%= buddy_queue %>
#   wall_time: <%= 3600*buddy_num_hours.to_i %>
#   native:
#     - "--ntasks"
#     - <%= buddy_num_cores.to_i %>

script:
  queue_name: "<%= queue %>"
  native: # ... array of command line arguments ...
     - "--partition"
     - "<%= queue %>"
     - "--nodes"
     - 1
     - "--ntasks"
     - "<%= num_cores %>"
     - "--mem"
     - "<%= memory %>G"
     - "--gres"
     - "gpu:<%= num_gpus %>"
     - "--time"
     - "<%= num_hours %>:00:00"
